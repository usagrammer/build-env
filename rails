cd ~
printf "
+++++++++++++++++++++
bundlerをインストールします。
+++++++++++++++++++++
"
gem install bundler
printf "
+++++++++++++++++++++
railsをインストールします。
+++++++++++++++++++++
"
gem install rails --version='5.2.3'
gem install rails --version="5.0.7.2"
rbenv rehash
rm -rf ~/.bundle
bundle config --global build.mysql2 --with-opt-dir="$(brew --prefix openssl)"
printf "
+++++++++++++++++++++
railsの導入が完了しました。
+++++++++++++++++++++
"
